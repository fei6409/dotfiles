[core]
  editor = vim
  abbrev = 12
  autocrlf = false
  commitgraph = true
  excludesfile = ~/.gitignore.global
  pager = delta --tabs 8
[alias]
  au = add -u
  bl = blame
  br = branch
  ci = commit
  cia = commit --amend
  co = checkout
  cp = cherry-pick
  dh = diff HEAD
  dhh = diff HEAD^
  grep = "grep -Iin"
  lg = log
  lgo = log --oneline
  re = rebase
  st = status
[http]
  cookiefile = ~/.gitcookies
[include]
  path = ~/.gitconfig.local
[pull]
  rebase = false
[rerere]
  enabled = true
[pretty]
  fixes = Fixes: %h (\"%s\")
[am]
  threeWay = true
[merge]
  conflictstyle = diff3
[delta]
  syntax-theme = Monokai Extended
  line-numbers = true
  file-style = yellow
  file-decoration-style = yellow ol ul
  hunk-header-decoration-style = 243 box ul
  line-numbers-minus-style = 167
  line-numbers-plus-style = 114
  line-numbers-left-style = 243
  line-numbers-right-style = 243
  plus-style = syntax "#002800"
  minus-style = syntax "#300000"
  navigate = true
[interactive]
  diffFilter = delta --color-only
