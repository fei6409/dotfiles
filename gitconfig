[core]
  abbrev = 12
  autocrlf = false
  commitgraph = true
  excludesfile = ~/.gitignore.global
  pager = delta --tabs 8
  fsmonitor = true
[alias]
  au = add -u
  bl = blame
  bli = blame -w -C -C -C # ignore white space and line moved in the same commit
  br = branch
  ci = commit
  cia = commit --amend
  co = checkout
  cp = cherry-pick
  dh = diff HEAD
  dhh = diff HEAD~
  dw = diff --word-diff
  fix = log --pretty=fixes
  lg = log
  rb = rebase
  ref= reflog --pretty=reflog
  st = status
[am]
  threeWay = true
[branch]
  sort = -committerdate
[http]
  cookiefile = ~/.gitcookies
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = zdiff3
[pull]
  rebase = false
[rerere]
  enabled = true
[status]
  submodulesummary = 1
[pretty]
  fixes = "%C(auto)Fixes: %h (\"%s\")%C(reset)"
  reflog = "%C(auto)%h %<(9)%gd %C(brightblue)%ci%C(reset) %s"
  onelinev2 = "%C(auto)%h %s%+d%C(reset)"
  onelinev3 = "%C(auto)%h %<(100)%s %C(green)%ae %C(brightblue)%ci%+d%C(reset)"
[delta]
  syntax-theme = Monokai Extended
  line-numbers = true
  navigate = true
  side-by-side = true
  file-style = yellow
  file-decoration-style = yellow ol ul
  hunk-header-decoration-style = 243 box ul
  line-numbers-minus-style = 167
  line-numbers-plus-style = 114
  line-numbers-left-style = 243
  line-numbers-right-style = 243
  plus-style = syntax "#002800"
  minus-style = syntax "#300000"
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[maintenance]
  auto = false
  strategy = incremental
[maintenance "gc"]
  enabled = true
  schedule = weekly

; Include local configs in the end to take precedence
[include]
  path = ~/.gitconfig.local
