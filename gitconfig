  bl = blame
  br = branch
  ci = commit
  cia = commit --amend
  co = checkout
  cp = cherry-pick
  dh = diff HEAD
  dhh = diff HEAD^
  grep = "grep -Iin"
  lg = log
  re = rebase
  st = status
